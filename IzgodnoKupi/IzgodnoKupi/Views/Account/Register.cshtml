@model RegisterViewModel


<div class="container">
    <ol class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index">Начало</a></li>
        <li class="active">Регистрация</li>
    </ol>
    <div class="registration">
        <div class="registration_left">
            <h2>Регистрация <span></span></h2>

            <div class="registration_form">
                <!-- Form -->
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div>
                        <label asp-for="Email">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </label>
                    </div>
                    <div>
                        <label asp-for="Password">
                            <input asp-for="Password" class="form-control" placeholder="Парола" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </label>
                    </div>
                    <div>
                        <label asp-for="ConfirmPassword">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Потвърдете паролата" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger" ></span>
                        </label>
                    </div>
                    <div class="sky-form">
                        <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>i agree Terms & conditions &nbsp;<a class="terms" href="#"> terms of service</a> </label>
                    </div>
                    <div>
                        <input type="submit" value="Регистрирай ме" id="register-submit">
                    </div>
                </form>
                <!-- /Form -->
            </div>
        </div>

        <div class="clearfix"></div>
    </div>
</div>

