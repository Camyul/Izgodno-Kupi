@using IzgodnoKupi.Web.Models.RoleViewModels

@model RoleViewModel

<h4 class="text-center">Създаване на Роля</h4>
<hr />
<div class="row">
    <div class="form-horizontal">
        <form asp-controller="Role" asp-action="AddRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.Label("", "Име", new { @class = "control-label col-md-2 col-md-offset-3" })
                <div class="col-md-3">
                    <input asp-for="RoleName" type="text" class="form-control" placeholder="Име" value="">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3 col-md-offset-6">
                    <input type="submit" class="btn btn-success" value="Добави" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}