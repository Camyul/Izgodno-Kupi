@using System.Collections.Generic
@using IzgodnoKupi.Services.Contracts
@using IzgodnoKupi.Data.Model

@inject ICategoriesService categoriesService


<div class="row">
    @{ 
            var categoriesFoHomePage = categoriesService.GetAllCategoriesForHomePage().ToList();

            int oneCol = (categoriesFoHomePage.Count / 3);

        <div class="col1 me-one">
            @*<h4>Shop</h4>*@
            <ul>
                @for (int i = 0; i < oneCol; i++)
                {
                    <li><a asp-controller="Category" asp-action="Index" sp-route-id="@categoriesFoHomePage[i].Id">@categoriesFoHomePage[i].Name</a></li>
                }
            </ul>
        </div>
        <div class="col1 me-one">
            @*<h4>Type</h4>*@
            <ul>
                @for (int i = oneCol; i < 2 * oneCol; i++)
                {
                    <li><a asp-controller="Category" asp-action="Index" sp-route-id="@categoriesFoHomePage[i].Id">@categoriesFoHomePage[i].Name</a></li>
                }
            </ul>
        </div>
        <div class="col1 me-one">
            @*<h4>Popular Brands</h4>*@
            <ul>
                @for (int i = 2 * oneCol; i < categoriesFoHomePage.Count; i++)
                {
                    <li><a asp-controller="Category" asp-action="Index" sp-route-id="@categoriesFoHomePage[i].Id">@categoriesFoHomePage[i].Name</a></li>
                }
            </ul>
        </div>
     }
</div>