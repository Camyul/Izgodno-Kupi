@using IzgodnoKupi.Web.Models.ProductViewModels;
@model PreviewProductViewModel

<div class="col-md-3 feature-grid">
    <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">
        <img class="item-img" src="@Model.Picture.ImageUrl" alt="" />
        <div class="arrival-info text-center">
            <h4>@Model.Name</h4>
            @if (Model.OldPrice != 0)
            {
                <p>@{@Model.Price}лв.</p>
                <span class="pric1"><del>@{@Model.OldPrice}лв.</del></span>
                <span class="disc">@Model.Discount<sup>%</sup></span>
            }
             else
            {
                <p>@{@Model.Price}лв.</p>
            }
        </div>
    </a>
        <div class="viw">
            <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>Преглед</a>
        </div>
 
</div>
