@using IzgodnoKupi.Web.Models.CategoryViewModels
@model CategoryViewModel


    <form asp-controller="Category" asp-action="AddCategory" method="post">
        <label>Add new Category</label>
        @Html.TextBoxFor(m => Model.Name, null, new { @class = "form-control", placeholder = "Name" })

        <span asp-validation-for="Name" class="text-danger"></span>
        <p>@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })</p>
        <input type="submit" class="btn btn-success" value="Add" />
    </form>